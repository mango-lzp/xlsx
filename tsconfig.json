{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "core/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "*.js"
  ]
}